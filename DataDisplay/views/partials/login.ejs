<form class ='user login-form' data-role="validator" method = "POST" action = "/log-in" enctype="application/json" data-interactive-check="true">
    <div class="form-group log-in">
        <label>Username / Email</label>
        <input type="text" class="form-input" placeholder="Enter username or email" data-validate="required minlength=1" name="username"/>
        <span class="invalid_feedback">
            invalid username
        </span>
    </div>
    <div class="form-group log-in">
        <label>Password</label>
        <div class = "password-wrapper">
            <input type="password" class="form-input" id = "password1" placeholder="Enter password" data-validate="required" name="password"/>
            <button class="button show"
                    data-role="hint"
                    data-hint-position="top"
                    data-hint-text="show password"
                    type ='button'>
            </button>
            <button class="button hide"
                    data-role="hint"
                    data-hint-position="top"
                    data-hint-text="hide password"
                    type ='button'>
            </button>
            <span class="invalid_feedback">
                password length should be greater than 1
            </span>
        </div>
        
        
    </div>
    <div class="form-group log-in">
        <span>Does not have an account? <a href="/log-in/register">Create one!</a></span>
    </div>
    <div class="form-group log-in">
        <button class="button success" type="submit" disabled>Log in</button>
        <input type="reset" class="button" value="Cancel" >
    </div>
</form>

<script>
    $('#password1').on("input",function(){
        console.log($(this).val())
        if($(this).val() == '' || $(this).val() == null){
            $('.password-wrapper .invalid_feedback').css('display','block')
            $('.button.success').attr('disabled',true)
        }else{
            $('.password-wrapper .invalid_feedback').css('display','none')
            $('.button.success').attr('disabled',false)
        }
    })
</script>